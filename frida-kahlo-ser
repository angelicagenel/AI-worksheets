    <script>
        const exercises = [
            {
                question: "Frida _____ artista.",
                context: "(What was Frida's job?)",
                options: ["es", "est√°", "son", "somos"],
                correct: "es",
                explanation: "DOCTOR: Occupation - We use SER for jobs and professions."
            },
            {
                question: "Ella _____ de M√©xico.",
                context: "(Where is Frida from?)",
                options: ["es", "est√°", "eres", "soy"],
                correct: "es",
                explanation: "DOCTOR: Origin - We use SER to say where someone is from."
            },
            {
                question: "Frida _____ muy talentosa.",
                context: "(Describing Frida's ability)",
                options: ["es", "est√°", "son", "estamos"],
                correct: "es",
                explanation: "DOCTOR: Characteristic - We use SER for permanent qualities and characteristics."
            },
            {
                question: "Diego Rivera _____ su esposo.",
                context: "(What is Diego's relationship to Frida?)",
                options: ["es", "est√°", "soy", "eres"],
                correct: "es",
                explanation: "DOCTOR: Relationship - We use SER to show family relationships and connections."
            }
        ];
        
        let answers = {};
        let attempts = {};
        
        function selectAnswer(questionIndex, selectedOption) {
            const exercise = exercises[questionIndex];
            const currentAttempts = attempts[questionIndex] || 0;
            
            if (currentAttempts >= 3) return;
            
            answers[questionIndex] = selectedOption;
            attempts[questionIndex] = currentAttempts + 1;
            
            // Update UI
            const questionDiv = document.querySelector(`[data-question="${questionIndex}"]`);
            const buttons = questionDiv.querySelectorAll('.option-btn');
            const feedbackContainer = questionDiv.querySelector('.feedback-container');
            const explanationContainer = questionDiv.querySelector('.explanation-container');
            
            // Update button states
            buttons.forEach(btn => {
                if (btn.dataset.option === selectedOption) {
                    if (selectedOption === exercise.correct) {
                        btn.classList.add('correct');
                    } else {
                        btn.classList.add('incorrect');
                    }
                }
                if (attempts[questionIndex] >= 3) {
                    btn.disabled = true;
                }
            });
            
            // Show feedback
            const isCorrect = selectedOption === exercise.correct;
            feedbackContainer.innerHTML = `
                <div class="feedback ${isCorrect ? 'correct' : 'incorrect'}">
                    ${isCorrect ? '‚úÖ' : '‚ùå'} ${isCorrect ? '¬°Correcto!' : 'Try again!'}
                    <span class="attempts">(${attempts[questionIndex]}/3 attempts)</span>
                </div>
            `;
            
            // Show explanation if incorrect and no attempts left
            if (!isCorrect && attempts[questionIndex] >= 3) {
                explanationContainer.innerHTML = `
                    <div class="explanation">
                        <strong>Correct answer:</strong> ${exercise.correct}<br>
                        ${exercise.explanation}
                    </div>
                `;
            }
            
            // Check if all questions answered
            if (Object.keys(answers).length === exercises.length) {
                showResults();
            }
        }
        
        function showResults() {
            let correctCount = 0;
            exercises.forEach((exercise, index) => {
                if (answers[index] === exercise.correct) {
                    correctCount++;
                }
            });
            
            const resultsDiv = document.getElementById('results');
            const scoreDiv = document.getElementById('score');
            const feedbackDiv = document.getElementById('feedback-message');
            const toggleBtn = document.getElementById('toggle-answers');
            
            scoreDiv.textContent = `${correctCount}/${exercises.length}`;
            
            let message = '';
            if (correctCount === exercises.length) {
                message = 'Excellent work! You understand when to use SER!';
            } else if (correctCount >= exercises.length * 0.75) {
                message = 'Good job! Keep practicing the DOCTOR rule!';
            } else {
                message = 'Keep practicing! Remember DOCTOR to help you use SER correctly.';
            }
            
            feedbackDiv.textContent = message;
            resultsDiv.style.display = 'block';
            toggleBtn.style.display = 'inline-flex';
        }
        
        function toggleAnswers() {
            const answerKey = document.getElementById('answer-key');
            const toggleBtn = document.getElementById('toggle-answers');
            
            if (answerKey.classList.contains('show')) {
                answerKey.classList.remove('show');
                toggleBtn.innerHTML = 'üëÅÔ∏è Show All Answers';
            } else {
                answerKey.classList.add('show');
                toggleBtn.innerHTML = 'üôà Hide Answers';
            }
        }
        
        function resetQuiz() {
            answers = {};
            attempts = {};
            
            // Reset all buttons and feedback
            document.querySelectorAll('.option-btn').forEach(btn => {
                btn.classList.remove('correct', 'incorrect');
                btn.disabled = false;
            });
            
            document.querySelectorAll('.feedback-container').forEach(container => {
                container.innerHTML = '';
            });
            
            document.querySelectorAll('.explanation-container').forEach(container => {
                container.innerHTML = '';
            });
            
            // Hide results and answers
            document.getElementById('results').style.display = 'none';
            document.getElementById('toggle-answers').style.display = 'none';
            document.getElementById('answer-key').classList.remove('show');
        }
    </script>
</body>
</html>
